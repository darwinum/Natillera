@page
@using pryNatillera.Pages.Natillera;
@model IndexModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Datos Natillera";
}

<h2>Información Natillera</h2>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Dias de Gracia Mora</th>                
                <th>Fecha Inicio Pago</th>
                <th>Número Cuotas</th>
                <th>Período Pago</th>
                <th>Valor Cuota</th>
                <th>Valor Mora</th>
                <th>Mora x Día</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eNatille in Model.Natilleras)
                {
            <tr>
                <td>@eNatille.DescripcionNatillera</td>
                <td>@eNatille.DiasGraciaMora</td>               
                <td>@eNatille.FechaInicioPagoCuota.ToString("yyyy/MM/dd")</td>
                <td>@eNatille.CuotasSocio</td>
                <td>@eNatille.TipoPago</td>
                <td>@eNatille.ValorCuota</td>
                <td>@eNatille.ValorMora</td>
                <td>@eNatille.ValorMoraDiaFijo</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@eNatille.NatilleraId">edit</a>
                    <button type="submit" asp-page-handler="delete"
                            asp-route-id="@eNatille.NatilleraId">
                        delete
                    </button>
                </td>
            </tr>
                }
        </tbody>
    </table>

    <a asp-page="Create">Create</a>
</form>